<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>UrbanEats</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/posts">UrbanEats</a>

  <div class="navbar-nav">
    <a class="nav-link" href="/posts">Blog</a>
    <a class="nav-link" href="/products">Catalog</a>
  </div>

  <div class="ml-auto d-flex align-items-center">
    <% if (currentUser) { %>
      <span class="text-light mr-3">Hi, <%= currentUser.name %></span>
      <form method="post" action="/logout" class="mb-0">
        <button class="btn btn-outline-light btn-sm" type="submit">Logout</button>
      </form>
    <% } else { %>
      <a class="btn btn-outline-light btn-sm mr-2" href="/login">Login</a>
      <a class="btn btn-light btn-sm" href="/signup">Sign up</a>
    <% } %>
  </div>
</nav>

<div class="container py-4">
