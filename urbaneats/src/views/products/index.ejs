<%- include("../partials/header") %>

<div class="d-flex justify-content-between align-items-center">
  <h3>Product Catalog</h3>
  <% if (currentUser) { %>
    <a class="btn btn-success btn-sm" href="/products/new">New Product</a>
  <% } %>
</div>

<hr/>

<% if (!products.length) { %>
  <p>No products yet.</p>
<% } %>

<div class="row">
  <% products.forEach(p => { %>
    <div class="col-md-6 mb-3">
      <div class="card h-100">
        <% if (p.imageUrl) { %>
          <img class="card-img-top" src="<%= p.imageUrl %>" alt="product image">
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= p.name %></h5>
          <div class="font-weight-bold mb-2">$<%= Number(p.price).toFixed(2) %></div>
          <p class="card-text"><%= p.description %></p>
          <% if (p.tags && p.tags.length) { %>
            <div class="small text-muted">Tags: <%= p.tags.join(", ") %></div>
          <% } %>
          <div class="small text-muted mt-2">
            <%= new Date(p.createdAt).toLocaleString() %>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<%- include("../partials/footer") %>
