<%- include("../partials/header") %>

<h3>Create Product</h3>

<% if (errors.length) { %>
  <div class="alert alert-danger">
    <ul class="mb-0">
      <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
    </ul>
  </div>
<% } %>

<form method="post" action="/products" class="mt-3">
  <div class="form-group">
    <label>Name</label>
    <input class="form-control" name="name" value="<%= form.name || '' %>" required />
  </div>

  <div class="form-group">
    <label>Description</label>
    <textarea class="form-control" name="description" rows="5" required><%= form.description || '' %></textarea>
  </div>

  <div class="form-group">
    <label>Price</label>
    <input class="form-control" name="price" type="number" step="0.01" min="0" value="<%= form.price || '' %>" required />
  </div>

  <div class="form-group">
    <label>Image URL (optional)</label>
    <input class="form-control" name="imageUrl" value="<%= form.imageUrl || '' %>" />
  </div>

  <div class="form-group">
    <label>Tags (comma separated)</label>
    <input class="form-control" name="tags" value="<%= form.tags || '' %>" />
  </div>

  <button class="btn btn-primary" type="submit">Save</button>
  <a class="btn btn-link" href="/products">Cancel</a>
</form>

<%- include("../partials/footer") %>
