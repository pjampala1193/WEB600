doctype html
head
  title Food Blog
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  script(src='https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js')
  link(rel='preconnect' href='https://fonts.gstatic.com')
  link
  link(rel='stylesheet' href='/css/styles.css')
aside#leftside
aside#rightside
#container
  // Include header
  header
    headcomp
  main
    aside#photos
      img
    h2
      blogtitle
    section#blogposts
      ul
        li#posts(v-for='post in posts')
          span.profile
            img
          span.author {{ post.name }}
          |  &mdash;
          span.date {{ post.date }}
          span.reply {{ post.reply }}
          p {{ post.message }}
        #info_box(v-for='post in posts' v-if='post.thisBox')
          p
            | &#x2716;
          #info_title {{ post.name }}
          #info_foodie
            span Foodie Level: 
            | {{ post.foodielevel }}
          #info_bio
            span
              | Bio:
              br
            | {{ post.bio }}
          button
            | Close
          p#close_info
  // Include footer
  footer
    p &copy; Copyright FOOD BLOG
script(src='/js/vue.js')
